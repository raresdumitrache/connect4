<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <Button
        android:id="@+id/createGame_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="Create Game" />

    <Button
        android:id="@+id/joinGame_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createGame_button"
        android:layout_alignRight="@+id/createGame_button"
        android:layout_below="@+id/createGame_button"
        android:layout_marginTop="23dp"
        android:text="Join Game" />

    <Button
        android:id="@+id/statistics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/joinGame_button"
        android:layout_alignRight="@+id/joinGame_button"
        android:layout_below="@+id/joinGame_button"
        android:layout_marginTop="32dp"
        android:text="Statistics" />

    <Button
        android:id="@+id/resumeGame_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/createGame_button"
        android:layout_alignLeft="@+id/createGame_button"
        android:layout_marginBottom="42dp"
        android:text="Resume Game" />

</RelativeLayout>